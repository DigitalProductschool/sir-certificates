model Template {
  id            Int       @id @default(autoincrement())
  name          String
  layout        Json      
  locale        String    @default("de-DE")
  updatedAt     DateTime  @updatedAt    
  certificates  Certificate[]
  program       Program   @relation(fields: [programId], references: [id])  
  programId     Int

  @@map("templates")  
}